{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "outDir": "./lib",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "jest"]
  },
  "include": [
    "node_modules/@types/**/*",
    "./src/**/*"
  ]
}
